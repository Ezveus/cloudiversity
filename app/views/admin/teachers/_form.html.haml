= form_for [:admin, teacher] do |f|
    .row
        .large-3.columns
            = f.label :user, class: "inline"
        .large-9.columns
            = f.collection_select(:user, User.all, :id, :login_full_name, prompt: true, selected: teacher.user.nil? ? nil : teacher.user.id)
    = f.submit class: 'button right'
