%tr
    %td= link_to(user.login, admin_user_path(user))
    %td= user.full_name
    %td= mail_to user.email
    %td
        = link_to('Edit', edit_admin_user_path(user), class: 'button glyph-button glyph-edit')
        = link_to('Delete', admin_user_path(user), method: :delete, class: 'button glyph-button glyph-delete alert')
