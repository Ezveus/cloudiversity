- content_for :title do
    Class #{@school_class.name}
%h3 Class attendees
%table{style: 'width: 100%;'}
    %thead
        %tr
            %td Name
            %td Actions
    %tbody
        - @school_class.students.each do |student|
            %tr
                %td= student.user.full_name
                %td
                    = link_to('View', admin_student_path(student), class: 'button glyph-button glyph-show')
                    = link_to('Remove from class', admin_school_class_remove_path(@school_class, student), method: :delete, class: 'button glyph-button glyph-delete')
%h3 Teachers &amp; disciplines
- if @tscds.count > 0
    %ul
        - @tscds.each do |tscd|
            %li #{tscd.teacher.user.full_name} => #{tscd.discipline.name}
- else
    %p
        %em No teacher is associated to this class
- content_for :toolbar do
    %dl
        %dt Actions
        %dd
            %ul.link-list
                %li= link_to("view all classes", admin_school_classes_path, class: "glyph-index")
                %li= link_to("create a new class", new_admin_school_class_path, class: "glyph-add")
                %li= link_to("edit this class", edit_admin_school_class_path(@school_class), class: "glyph-edit")
                %li= link_to('Add attendees', admin_school_class_add_path(@school_class), class: "glyph-add")
                %li= link_to("delete this class", admin_school_class_path(@school_class), method: :delete, class: "glyph-delete")
