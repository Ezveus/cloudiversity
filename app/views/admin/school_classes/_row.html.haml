%tr
    %td= school_class.name
    %td= school_class.users.count
    %td
        = link_to 'View', admin_school_class_path(school_class), class: 'button'
        = link_to 'Edit', edit_admin_school_class_path(school_class), class: 'button'
        = button_to 'Delete', admin_school_class_path(school_class), method: :delete, confirm: 'Are you sure?', class: 'button alert'
