%div.uk-text-bold= period.name
- if period.past?
    = t('.past', duration: (Time.now.to_date - period.end_date).to_i)
- elsif period.future?
    = t('.future', duration: (period.start_date - Time.now.to_date).to_i)
- else
    .uk-progress.uk-progress-mini.uk-margin-small
        .uk-progress-bar{style: "width: #{period.elapsed_percent}%"}
    .uk-grid
        .uk-text-left.uk-width-1-3
            = l(period.start_date)
        .uk-text-center.uk-width-1-3
            = t('.remaining', remaining: period.remaining)
        .uk-text-right.uk-width-1-3
            = l(period.end_date)
