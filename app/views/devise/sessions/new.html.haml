%h2 Sign in
.row
    .large-8.columns
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.auto_input :login, field_opts: { autofocus: true }
            = f.auto_input :password
            .row
                - if devise_mapping.rememberable?
                    .large-3.large-offset-3.columns
                        = f.check_box :remember_me
                        = f.label :remember_me
                    .large-3.large-offset-3.columns
                        = f.submit "Sign in", class: 'button right'
                - else
                    .large-3.large-offset-9.columns
                        = f.submit "Sign in", class: 'button right'
    .large-4.columns
        %strong Links
        = render "devise/shared/links"
        %strong Locked out?
        %p
            If you lost your password or locked your account, you have to
            contact your school's system administrator, who can unlock your
            account.
